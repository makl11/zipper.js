{
	"include": ["./*.js"],
	"compilerOptions": {
		"outDir": "dist",
		"allowJs": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationMap": true,
		"checkJs": true,
		"strict": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "ES2022",
		"module": "Node16",
		"lib": ["ESNext", "DOM"],
		"moduleResolution": "Node16"
	}
}
